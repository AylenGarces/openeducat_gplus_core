<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>

        <record id="view_op_type_subject_tree" model="ir.ui.view">
            <field name="name">type.subject.tree</field>
            <field name="model">type.subject</field>
            <field name="priority" eval="8"/>
            <field name="arch" type="xml">
                <tree string="Tipo de Asignatura">
                    <field name="name"/>
                    <field name="sequence"/>
                    <field name="is_required"/>
                    <field name="is_application"/>
                    <field name="note"/>
                </tree>
            </field>
        </record>

        <record id="view_op_type_subject_form" model="ir.ui.view">
            <field name="name">type.subject.form</field>
            <field name="model">type.subject</field>
            <field name="priority" eval="8"/>
            <field name="arch" type="xml">
                <form string="Tipo de Asignatura">
                    <sheet>
                        <group col="4">
                            <field name="name"/>
                            <field name="sequence"/>
                            <field name="is_required"/>
                            <field name="is_application"/>
                            <field name="note"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="view_op_type_subject_search" model="ir.ui.view">
            <field name="name">type.subject.search</field>
            <field name="model">type.subject</field>
            <field name="priority" eval="8"/>
            <field name="arch" type="xml">
                <search string="Tipo de Asignatura">
                    <field name="name"/>
                    <field name="sequence"/>
                    <field name="is_required"/>
                    <field name="is_application"/>
                    <field name="note"/>
                    <newline/>
                    <group expand="0" string="Group By...">
                        <filter string="Type" domain="[]"
                                context="{'group_by':'type'}"/>
                    </group>
                </search>
            </field>
        </record>

        <record model="ir.actions.act_window" id="act_open_op_type_subject_view">
            <field name="name">Tipo de Asignatura</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">type.subject</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="search_view_id" ref="view_op_type_subject_search"/>
            <field name="domain">[]</field>
            <field name="context">{}</field>
        </record>

        <record model="ir.actions.act_window.view" id="act_open_op_type_subject_view_form">
            <field name="act_window_id" ref="act_open_op_type_subject_view"/>
            <field name="sequence" eval="20"/>
            <field name="view_mode">form</field>
            <field name="view_id" ref="view_op_type_subject_form"/>
        </record>

        <record model="ir.actions.act_window.view" id="act_open_op_type_subject_tree">
            <field name="act_window_id" ref="act_open_op_type_subject_view"/>
            <field name="sequence" eval="10"/>
            <field name="view_mode">tree</field>
            <field name="view_id" ref="view_op_type_subject_tree"/>
        </record>

        <menuitem name="Tipo de Asignaturas"
                  id="menu_op_type_subject"
                  sequence="1"
                  action="act_open_op_type_subject_view"
                  parent="menu_op_subject_gen"
        />
    </data>
</odoo>
